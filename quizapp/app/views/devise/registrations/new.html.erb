
 <%= devise_error_messages! %>
 <div class="question">
   <div class="heading">Sign up</div>
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
 

  <div class="label"><%= f.label :email %></div>
  <div class="text"><%= f.text_field :email, :autofocus => true %></div>
  <div class="label"><%= f.label :username %></div>
  <div class="text"><%= f.text_field :username, :autofocus => true %></div>

  <div class="label"><%= f.label :password %></div>
  <div class="text"><%= f.password_field :password %></div>

  <div class="label"><%= f.label :password_confirmation %></div>
  <div class="text"><%= f.password_field :password_confirmation %></div>
  <div class="label"></div>
  <div class="text"><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
