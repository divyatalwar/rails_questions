<div class ="question">
  <div class="heading">Sign in</div>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="label"><%= f.label :email %></div>
  <div class = "text"><%= f.email_field :email, :autofocus => true %></div>

  <div class="label"><%= f.label :password %></div>
  <div class = "text"><%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div class="text"></div>
  <% end -%>

  <div class="text"><%= f.submit "Sign in" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>